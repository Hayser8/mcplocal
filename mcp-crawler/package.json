{
  "name": "mcp-crawler-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run -w @mcp-crawler/core build && npm run -w mcp-crawler build && npm run -w @mcp-crawler/api build",
    "dev:mcp": "npm -w mcp-crawler run dev",
    "dev:api": "npm -w @mcp-crawler/api run dev"
  },
  "devDependencies": {
    "tsx": "^4.16.0",
    "typescript": "^5.4.0"
  },
  "engines": { "node": ">=18.17" }
}
